{
  "extends": ["config:recommended"],
  "regexManagers": [
    {
      "fileMatch": ["values.yaml"],
      "matchStrings": [
        "image: docker\\.io/sbstnsz/rest-json-quickstart:(?<currentValue>.*)"
      ],
      "datasourceTemplate": "docker",
      "depNameTemplate": "sbstnsz/rest-json-quickstart",
      "versioningTemplate": "semver"
    },
    {
      "fileMatch": ["values.yaml"],
      "matchStrings": [
        "image: docker\\.io/another-app:(?<currentValue>.*)"
      ],
      "datasourceTemplate": "docker",
      "depNameTemplate": "another-app",
      "versioningTemplate": "semver"
    }
  ],
  "branchPrefix": "renovate/",
  "packageRules": [
    {
      "paths": ["**/values.yaml"],
      "baseBranches": ["rest-json-quickstart"],
      "managers": ["regex"],
      "packageNames": ["sbstnsz/rest-json-quickstart"]
    },
    {
      "paths": ["**/values.yaml"],
      "baseBranches": ["another-branch"],
      "managers": ["regex"],
      "packageNames": ["another-app"]
    }
  ]
}
