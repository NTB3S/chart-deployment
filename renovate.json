{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base",
    "docker:enableMajor"
  ],
  "kubernetes": {
    "fileMatch": ["\\.yaml$", "\\.yml$"]
  },
  "packageRules": [
    {
      "matchDatasources": ["docker"],
      "matchPackagePatterns": ["your-docker-hub-image-name"],
      "automerge": true
    }
  ]
}
